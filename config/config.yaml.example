#region 隐私配置

longport:
  app_key: "YOUR_APP_KEY"
  app_secret: "YOUR_APP_SECRET"
  access_token: "YOUR_ACCESS_TOKEN"

email:
  smtp_server: "smtp.example.com"
  smtp_port: 465
  sender_email: "your_email@example.com"
  sender_password: "your_password"
  receiver_emails: ['receiver@example.com']

#endregion

#region 全局配置

app:
  log_level: "DEBUG"
  trade_mode: "BACKTEST" # LIVE, PAPER, BACKTEST
  notifier_type: "EMAIL"
  using_provider: "LONGPORT"
  using_strategy: "MACD" # WR, MACD, RSI
  allowed_boards: # MAIN, STAR, CHINEXT, BSHARE, BSE, NQ, HK
    - "MAIN"
    - "HK"
  update_market_data_interval_days: 7

backtest:
  start_time: "2025-01-01"
  end_time: "2025-12-31"
  benchmarks:
    - "HSI.HK"
    - "HSCEI.HK"
    - "HSTECH.HK"
    - ".IXIC.US"
    - ".SPX.US"
    - ".DJI.US"
    - "000001.SH"
    - "399001.SZ"
    - "000300.SH"
    - "000905.SH"
    - "399006.SZ"

account:
  balance: 1000000
  max_trades_per_symbol_per_day: 2
  position_ratio: 0.2

trading:
  enable_t: true
  initial_balance: 1000000
  total_capital: 100000
  monitor:
    interval: 60
    request_delay: 0.5
  position_sizing:
    max_position_ratio: 0.25
    risk_per_trade: 0.01
    atr_stop_multiple: 2.5
    min_rebalance_ratio: 0.05

report:
  account: "#1f77b4"
  buy: "#2ca02c"
  sell: "#d62728"
  benchmarks:
    - symbol: "HSI.HK"
      color: "#ff7f0e"
    - symbol: ".IXIC.US"
      color: "#9467bd"

#endregion

#region 策略配置

WR:
  period: 14
  threshold: 0.02

MACD:
  fast: 12
  slow: 26
  signal: 9

RSI:
  period: 14
  overbought: 70
  oversold: 30
#endregion
