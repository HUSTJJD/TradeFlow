#region 隐私配置

longport:
  app_key: "YOUR_APP_KEY"
  app_secret: "YOUR_APP_SECRET"
  access_token: "YOUR_ACCESS_TOKEN"

email:
  smtp_server: "smtp.example.com"
  smtp_port: 465
  sender_email: "your_email@example.com"
  sender_password: "your_password"
  receiver_emails: ['receiver@example.com']

#endregion

#region 全局配置

log_level: "DEBUG"

run_mode: "backtest"

notifier_type: "email"

backtest:
  start_time: "2025-01-01"
  end_time: "2025-12-31"
  benchmarks:
    - "HSI.HK"
    - "HSCEI.HK"
    - "HSTECH.HK"
    - ".IXIC.US"
    - ".SPX.US"
    - ".DJI.US"
    - "000001.SH"
    - "399001.SZ"
    - "000300.SH"
    - "000905.SH"
    - "399006.SZ"

trading:
  initial_balance: 1000000
  position_ratio: 0.2
  total_capital: 100000
  markets:
    SSE_MAIN:
      url: ""
      symbol: ""
      name: ""
      rate: 0.0003
    SSE_STAR:
      url: ""
      symbol: ""
      name: ""
      rate: 0.0003
    SZSE_MAIN:
      url: ""
      symbol: ""
      name: ""
      rate: 0.0003
    SZSE_GEM:
      url: ""
      symbol: ""
      name: ""
      rate: 0.0003
    HKCONNECT:
      url: ""
      symbol: ""
      name: ""
      rate: 0.0003
  position_sizing:
    max_position_ratio: 0.25
    risk_per_trade: 0.01
    atr_stop_multiple: 2.5
    min_rebalance_ratio: 0.05
  monitor:
    interval: 60
    request_delay: 0.5

report:
  account: "#1f77b4"
  buy: "#2ca02c"
  sell: "#d62728"
  benchmarks:
    - symbol: "HSI.HK"
      color: "#ff7f0e"
    - symbol: ".IXIC.US"
      color: "#9467bd"

universe:
  selector:
    max_symbols: 5
    one_per_industry: true
  refresh:
    lookback_days: 120
    sentiment_window_days: 7

market_update_interval_days: 7

#endregion

#region 策略配置

strategy:
  name: "TrendSwingT"
  params:
    ema_fast: 20
    ema_slow: 60
    adx_period: 14
    adx_threshold: 20
    donchian_period: 20
    atr_period: 14
    atr_stop_loss: 2.5
    atr_trailing: 3.0
    take_profit_r_multiple_1: 2.0
    take_profit_ratio_1: 0.5
    enable_t: true
    t_rsi_period: 6
    t_overbought: 75
    t_oversold: 25
    t_step_ratio: 0.10
    base_target_position_ratio: 0.20

  multi_timeframe:
    swing_timeframe: "1d"
    t_timeframe: "15m"
